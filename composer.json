{
    "name": "eusonlito/password-manager",
    "type": "project",
    "description": "Self-hosted Password Manager based on Laravel 10 + PHP 8 + MySQL 8. Gestor de Contrase√±as basado en Laravel 10 + PHP 8 + MySQL 8.",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "bacon/bacon-qr-code": "master-dev",
        "doctrine/dbal": "^3.0",
        "eusonlito/disposable-email-validator": "^0.1",
        "eusonlito/laravel-meta": "^3.3",
        "eusonlito/laravel-packer": "^3.0",
        "laravel/framework": "^10.0",
        "laravel/helpers": "^1.2",
        "pragmarx/google2fa-qrcode": "master-dev",
        "predis/predis": "^2.0",
        "sentry/sentry-laravel": "^4.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "brianium/paratest": "^7.1",
        "fakerphp/faker": "^1.13",
        "friendsofphp/php-cs-fixer": "^3.9",
        "larastan/larastan": "^2.0",
        "laravel/pint": "^1.0",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/phpinsights": "^2.8",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^10.0",
        "psalm/plugin-laravel": "^2.7",
        "spatie/laravel-ignition": "^2.0",
        "vimeo/psalm": "^5.6"
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "classmap": [
            "database/migrations"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/Services/Helper/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@composer dump-autoload",
            "@composer artisan-cache --ansi"
        ],

        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],

        "post-update-cmd": [
            "@php artisan test"
        ],

        "artisan-cache-clear": [
            "@php artisan optimize:clear --ansi"
        ],

        "artisan-cache": [
            "@php artisan optimize --ansi"
        ],

        "deploy": [
            "rm -f bootstrap/cache/*.php",
            "git checkout .",
            "git pull",
            "@composer install --no-dev --optimize-autoloader --classmap-authoritative --ansi",
            "@php artisan migrate --force --ansi",
            "@php artisan maintenance:opcache:preload"
        ],

        "deploy-docker": [
            "rm -f bootstrap/cache/*.php",
            "@composer install --no-dev --optimize-autoloader --classmap-authoritative --ansi",
            "@php artisan migrate --force --ansi",
            "@php artisan db:seed --class=\"Database\\Seeders\\Database\" --force"
        ],

        "fix": [
            "@php ./vendor/bin/php-cs-fixer fix -v --ansi",
            "@php ./vendor/bin/pint -v"
        ],

        "quality": [
            "@php artisan insights --ansi",
            "@php ./vendor/bin/phpstan analyse --ansi || true",
            "@php ./vendor/bin/psalm || true"
        ],

        "translation": [
            "@php artisan translation:fix --ansi",
            "@php artisan translation:fill --ansi",
            "@php artisan translation:clean --ansi",
            "git checkout resources/lang/*/validation.php"
        ]
    }
}
